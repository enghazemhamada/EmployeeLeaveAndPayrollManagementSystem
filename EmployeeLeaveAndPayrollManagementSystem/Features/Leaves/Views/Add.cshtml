@model AddLeaveRequestViewModel

@{
    ViewData["Title"] = "Add Leave Request";
    Layout = "/Features/Shared/_Layout.cshtml";
}

<h2>Add Leave Request</h2>
<a asp-action="Index" class="btn btn-primary mt-2 mb-3">Back</a>

<div class="row">
    <div class="col-md-4">
        <form id="leaveForm">
            <div class="form-group mb-3">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<LeaveType>()">
                    <option value="">-- Select Type --</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Reason" class="control-label"></label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary w-100" />
            </div>
        </form>

        <div id="resultMessage" class="mt-3"></div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $("#leaveForm").submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: '@Url.Action("Add", "Leave")',
                type: 'POST',
                data: $(this).serialize(),
                success: function () {
                    $("#resultMessage").html(`<div class="alert alert-success">Leave request submitted successfully!</div>`);
                    $("#leaveForm")[0].reset();
                },
                error: function (xhr) {
                    $("#resultMessage").html(`<div class="alert alert-danger">${xhr.responseJSON.message}</div>`);
                }
            });
        });
    </script>
}
